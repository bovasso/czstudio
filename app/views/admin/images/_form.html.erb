<%= form_for ([:admin, @image]), :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :caption, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :caption, :class => 'text' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :case_study_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :case_study_id, :class => 'text number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'File Upload', :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :image, :class => 'file styled' %>
    </div>
  </div>
  <hr>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_images_path, :class => 'btn' %>
  </div>
<% end %>
